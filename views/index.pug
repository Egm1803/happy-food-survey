extends layout

block content
  div#login-container
    h1 Happy Food Survey
    hr
    br
    if !user 
      h2  Please Login
    else if user
      h2 Change User
    form(method='POST' action='')
      div.form-group.form
        label(for='name') Username:
        input#name.form-control(type='text',  name='name' )
        label(for='password') Password:
        input#password.form-control(type='password',  name='password' )
        div.mb-3
          label
              input(type="checkbox" name="remembermeChecked" value="checked")
              span Remember me
        br
        button.btn.btn-primary(type='submit') Login
    if authErr
      hr
      h4 #{authErr}
    if errors
      ul
        for error in errors
            li!= error.msg
